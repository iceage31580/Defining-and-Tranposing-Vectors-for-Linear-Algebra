#import numpy
import numpy as np

#2-d Vector row or column 
v2_arr = np.array([[3, -2]]) # a list, a row as an array (notice the double brackets
print(f"2d Vector as an array (v2_arr}")

#option to convert list to an array
v2_arr_v1 = np.array([v2_arr])
print(f"2d vector as an array (v2_arr_v1) = {v2_arr_v1}")

#3-d vector: row or column 
v3_ls = [3, -2, 2] # a list 
print(f"3d vector as a list: {v3_ls}")

#tranpose list 
v3_lis = np.tranpose(v3_ls) # a list 
print(f"a 3d vector ina  list (v3_ls) and its tranpose {v3_ls}")
